{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "rootDir": "./源代码/原始的源代码",
        "outDir": "./源代码/编译出的源代码",
        "declaration": false,
        "lib": [
            "esnext",
            "dom"
        ]
    },
    "include": [
        "源代码/原始的源代码"
, "源代码/原始的源代码/index.ts"    ],
    "exclude": [
        "node_modules"
    ]
}
